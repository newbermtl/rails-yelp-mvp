<h2> <%= @restaurant.name %> </h2>

<p> Where? <%= @restaurant.address %> </p>

<p> Cusine Type: <%= @restaurant.category %> </p>

<p>Phone number: <%= @restaurant.phone_number %> </p>

 <%= render "reviews/form_review", review: @restaurant %>

<ul class="m-3">
  <% @restaurant.reviews.each do |review| %>
    <li class="card">
      <%= review.content %>
      <br>
      Rating: <%= "\u{1f31f}" * review.rating  %>
    </li>
  <% end %>

</ul>
